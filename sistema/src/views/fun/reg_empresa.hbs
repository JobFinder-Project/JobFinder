  <main class="container">
      <p class="form-description">
        Preencha as informações básicas da sua empresa para criar seu cadastro.
        Você poderá complementar as informações posteriormente.
      </p>

      <form id="companyForm" action="/empresa/cadastrar" method="POST">

      <!-- Etapa 1 -->
      <div class="form-step active">
        <div class="form-group">
          <label class="form-label">Nome da Empresa*</label>
          <input
            type="text"
            id="nome"
            name="nome"
            class="form-input"
            placeholder="Digite o nome da sua empresa"
            required
          />
        </div>
        <div class="form-group">
          <label class="form-label">CNPJ*</label>
          <input
            type="text"
            id="cnpj"
            name="cnpj"
            class="form-input"
            placeholder="00.000.000/0000-00"
            required
          />
          <span class="form-helper">Digite apenas números</span>
        </div>
        <button type="button" class="button button-primary next-btn">Próximo</button>
      </div>
        
      <!-- Etapa 2 -->
      <div class="form-step">  
        <div class="form-group">
          <label class="form-label">Email*</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-input"
            placeholder="email@suaempresa.com"
            required
          />
        </div>        
        <div class="form-group">
          <label class="form-label">Telefone Comercial*</label>
          <input
            type="tel"
            class="form-input"
            id="fone"
            name="fone"
            placeholder="(00) 00000-0000"
            required
          />
        </div>
        <div class="button-group">
          <button type="button" class="button button-secondary prev-btn">Voltar</button>
          <button type="button" class="button button-primary next-btn">Próximo</button>
        </div>
      </div>

      <!-- Etapa 3 -->
      <div class="form-step"> 
        <div class="form-group">

          <input type="password" id="senha" name="senha" class="form-input" required />
          <label class="form-label">Telefone Comercial*</label>
          <input
            type="tel"
            class="form-input"
            id="fone"
            name="fone"
            placeholder="(00) 00000-0000"
            required
          />
        </div>
        <div class="button-group">
          <button type="button" class="button button-secondary" onclick="prevStep(1)">Voltar</button>
          <button type="button" class="button button-primary" onclick="nextStep(3)">Próximo</button>
        </div>
        </div>
        <div class="form-group">
          <label class="form-label">Bio da Empresa</label>
          <textarea
            class="form-input"
            id="bio"
            name="bio"
            placeholder="Descreva brevemente sua empresa..."
          ></textarea>
        </div>
        <div class="form-group">
          <label class="form-label">Site da Empresa</label>
          <input type="url" class="form-input" id="site" name="site" placeholder="https://www.suaempresa.com" />
        </div>
        <div class="button-group">
          <button type="button" class="button button-secondary prev-btn">Voltar</button>
          <button type="submit" class="button button-primary">Salvar</button>
        </div>
      </div> 
    </form>
  </main>

  <script>
    const steps = document.querySelectorAll(".form-step");
    const nextBtns = document.querySelectorAll(".next-btn");
    const prevBtns = document.querySelectorAll(".prev-btn");
    let currentStep = 0;

    function showStep(step){
      steps.forEach((s, i) => s.classList.toggle("active, i === step"));
    }

    nextBtns.forEach(btn => btn.addEventListener("click", () => {
      if (currentStep < steps.length - 1){
        currentStep++;
        showStep(currentStep);
      }
    }));

    prevBtns.forEach(btn => btn.addEventListener("click", () => {
      if (currentStep > 0){
        currentStep--;
        showStep(currentStep);
      }
    }));
  </script>

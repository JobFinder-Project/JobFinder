<body>
    <nav class="navbar">
        <h1>JobFinder</h1>

        <ul class="navbar-menu">
            <li><a href="/empresa/{{empresaId}}/vagas">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0z" />
                <path fill-rule="evenodd"
                    d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
            </svg>
            </a></li>
        </ul>
    </nav>

    <main class="main-content">
    <div class="container">
        <h1>Detalhes da Candidatura</h1>

    
        {{#each candidaturas}}
        <ul class="card-grid">
            
            <li class="job-card">
                <!-- Nome da vaga -->
                <h2>Nome: {{candidato.nome}} </h2>
                <h2>{{candidato.qualificacao}}</h2>
                <!-- Nome da empresa -->
                <!-- Descrição -->
                <p>{{vaga.area}}</p>


                <form action="/empresa/candidaturas/{{_id}}/status" method="POST">
                    <label for="status">Alterar Status:</label>
                    <select name="status" id="status">
                        <option value="Pendente" {{#ifCond status "Pendente" }}selected{{/ifCond}}>Pendente</option>
                        <option value="Aceito" {{#ifCond status "Aceito" }}selected{{/ifCond}}>Aceito</option>
                        <option value="Rejeitado" {{#ifCond status "Rejeitado" }}selected{{/ifCond}}>Rejeitado</option>
                    </select>
                    <button type="submit">Atualizar</button>
                </form>
            </li>
        </ul>
    {{/each}}
</div>
</main>
</div>

 <!-- Navegação inferior -->
    <nav class="bottom-nav">
        <a href="/empresa/dashboard" class="nav-item">Início</a>
        <a href="/empresa/{{empresaId}}/vagas" class="nav-item active">Vagas</a>
        <a href="/empresa/{{empresaId}}/vagas/criar" class="nav-item">Add Vagas</a>
        <a href="#" class="nav-item">Perfil</a>
    </nav>
</body>
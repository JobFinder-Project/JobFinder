<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JobFinder</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>

    <div class="container">
        <!-- Cabe√ßalho -->
        <header class="header">
            <button class="back-button"><a href="/login">‚Üê</a></button>
            <h1>JobFinder</h1>
            <button class="menu-button">‚ò∞</button>
        </header>


        <!-- Barra de busca -->
        <div class="search-container">
            <form action="/vagas/buscar" method="GET">
                <span class="search-icon">üîç</span>
                <input type="text" name="q" class="search-input" placeholder="Buscar Vagas">
                <button type="submit" class="search-button">Buscar</button>
            </form>
        </div>

        <!-- Categorias -->
        <div class="categories">
            <button class="category-button">Full Stack</button>
            <button class="category-button">UX/UI Designer</button>
            <button class="category-button">Analista de Dados</button>
            <button class="category-button">T√©cnico em TI</button>
            <button class="category-button">Estoquista</button>
            <button class="category-button">Programador Front End</button>
            <button class="category-button">Programador Back End</button>
            <button class="category-button">Operador de caixa</button>
            <button class="category-button">Enfermagem</button>
        </div>

        <!-- Grid de vagas -->
        <div class="jobs-grid">
            <ul>
                {{#if vagas.length}}
                {{#each vagas}}
                <li class="job-card">
                    <!-- Nome da vaga -->
                    <h2>{{nome}}</h2>

                    <!-- Nome da empresa -->
                    {{#if empresa}}
                    <p class="job-company">{{empresa.nome}}</p>
                    {{/if}}

                    <!-- Imagem da vaga -->
                    {{#if imagem}}
                    <img src="{{imagem}}" alt="{{nome}}" class="job-image" />
                    {{/if}}

                    <!-- Descri√ß√£o -->
                    <p>{{area}}</p>

                    <!-- Bot√£o de cadastro -->
                    <button class="register-button" onclick="window.location.href = '/candidato/vagas/{{_id}}';">Ver
                        Vaga</button>
                </li>
                {{/each}}
                {{else}}
                <!-- Caso n√£o existam vagas cadastradas -->
                <div class="no-data">
                    <p>N√£o existem vagas cadastradas.</p>
                </div>
                {{/if}}
            </ul>
        </div>

        <nav class="bottom-nav">
            <a href="/candidato/dashboard" class="nav-item active">In√≠cio</a>
            <a href="/candidato/{{candidatoId}}/candidaturas" class="nav-item">Candidaturas</a>
            <a href="#" class="nav-item">Configura√ß√µes</a>
        </nav>

    <div class="page-container">
        <!-- Menu lateral -->
        <aside class="sidebar">
            <h1>JobFinder</h1>
            <ul class="menu">
                <li><a href="/candidato/candidaturas">Minhas Candidaturas</a></li>
                <li><a href="/candidato/perfil/{{candidatoId}}">Meu Perfil</a></li>
                <li><a href="/Home">Sair</a></li>
            </ul>
        </aside>

        <!-- Conte√∫do principal -->
        <main class="main-content">
            <!-- Barra de busca -->
            <div class="search-container">
                <form action="/vagas/buscar" method="GET">
                    <input type="text" name="q" class="search-input" placeholder="Buscar Vagas">
                    <button type="submit" class="search-button">Buscar</button>
                </form>
            </div>

            <!-- Categorias -->
            <div class="categories">
                <button class="category-button">Full Stack</button>
                <button class="category-button">UX/UI Designer</button>
                <button class="category-button">Analista de Dados</button>
                <button class="category-button">T√©cnico em TI</button>
                <button class="category-button">Estoquista</button>
                <button class="category-button">Programador Front End</button>
                <button class="category-button">Programador Back End</button>
                <button class="category-button">Operador de caixa</button>
                <button class="category-button">Enfermagem</button>
            </div>

            <!-- Feed de vagas -->
            <div class="jobs-feed">
                <ul>
                    {{#if vagas.length}}
                    {{#each vagas}}
                    <li class="job-card">
                        <img src="{{imagem}}" alt="{{nome}}" class="job-image" />
                        <h2>{{nome}}</h2>
                        <p class="job-company">{{empresa.nome}}</p>
                        <p>{{area}}</p>
                        <button class="register-button" onclick="window.location.href = '/candidato/vagas/{{_id}}';">Ver Vaga</button>
                    </li>
                    {{/each}}
                    {{else}}
                    <div class="no-data">
                        <p>N√£o existem vagas cadastradas.</p>
                    </div>
                    {{/if}}
                </ul>
            </div>
        </main>

    </div>

</body>
</html>

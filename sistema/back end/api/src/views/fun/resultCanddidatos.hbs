<!DOCTYPE html>
<html lang="pt-br">


<body>
        <!-- Cabe√ßalho -->
    <header class="header">
        <button class="back-button"><a href="/empresa/dashboard">‚Üê</a></button>
        <h1>JobFinder</h1>
        <button class="menu-button">‚ò∞</button>
    </header>

    <!-- Barra de busca -->
    <div class="search-container">
        <form action="/empresa/candidatos/buscar" method="GET">
            <span class="search-icon">üîç</span>
            <input type="text" name="q" class="search-input" placeholder="Buscar Vagas">
            <button type="submit" class="search-button">Buscar</button>
        </form>
    </div>
    <div class="container">
        <!-- Cabe√ßalho -->
        <div class="capiroto">
            <h1>Resultados da Busca:</h1>
            <p>Termo buscado: "{{query}}"</p>
        </div>

        <!-- Grid de Candidatos -->
        <div class="candidates-grid">
            {{#if candidatos.length}}
            {{#each candidatos}}
            <div class="candidate-card">
                <!-- Imagem do candidato -->
                {{#if imagem}}
                <img src="{{imagem}}" alt="{{nome}}" class="candidate-image" />
                {{/if}}

                <!-- Nome do candidato -->
                <h2>{{nome}}</h2>

                <!-- Qualifica√ß√£o -->
                <p>{{qualificacao}}</p>

                <!-- Educa√ß√£o -->
                <p>{{educacao}}</p>

                <!-- Bot√£o para ver perfil -->
                <button class="view-profile-button">Ver Perfil</button>
            </div>
            {{/each}}
            {{else}}
            <div class="no-data">
                <p>Nenhum candidato encontrado para "{{query}}".</p>
            </div>
            {{/if}}
        </div>
    </div>
</body>
</html>
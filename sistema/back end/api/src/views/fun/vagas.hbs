<body>
    <!-- Cabeçalho -->
    <header class="header">
        <button class="back-button"><a href="/empresa/dashboard">←</a></button>
        <h1>JobFinder</h1>
        <button class="menu-button">☰</button>
    </header>

    <!-- Grid de vagas -->
    <h1>Vagas</h1>
    <div class="jobs-grid">
        <ul>
            {{#if vagas.length}}
            {{#each vagas}}
            <li class="job-card">
                <!-- Nome da vaga -->
                <h2>{{this.nome}}</h2>

                <!-- Nome da empresa -->
                {{#if this.empresa}}
                <p class="job-company">{{this.empresa.nome}}</p>
                {{/if}}

                <!-- Imagem da vaga -->
                {{#if this.imagem}}
                <img src="{{this.imagem}}" alt="{{this.nome}}" class="job-image" />
                {{/if}}

                <!-- Descrição -->
                <p>{{this.area}}</p>
            </li>
            {{/each}}
            {{else}}
            <!-- Caso não existam vagas cadastradas -->
            <div class="no-data">
                <p>Não existem vagas cadastradas.</p>
            </div>
            {{/if}}
        </ul>
    </div>

    <!-- Navegação inferior -->
    <nav class="bottom-nav">
        <a href="/empresa/dashboard" class="nav-item ">Início</a>
        <a href="/empresa/{{empresaId}}/vagas" class="nav-item active">Vagas</a>
        <a href="/empresa/{{empresaId}}/vagas/criar" class="nav-item">Add Vagas</a>
        <a href="#" class="nav-item">Configurações</a>
    </nav>
</body>